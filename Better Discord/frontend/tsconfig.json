{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "include": [
    "src",
    "main.ts",             // add this so main.ts is compiled
    "vite.config.ts",
    "react-app-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
