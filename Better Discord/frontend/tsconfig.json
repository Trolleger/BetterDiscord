{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "expo": [
        "./node_modules/expo"
      ],
      "expo-modules-core": [
        "./node_modules/expo-modules-core"
      ]
    },
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "jest",
      "node"
    ],
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**"
  ],
  "extends": "expo/tsconfig.base"
}
